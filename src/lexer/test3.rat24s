function factorial(n integer) 
{
    if (n == 0) {
        return 1;
    }
    else {
        integer result;
        result = 1;
        integer i; 
        i = 1;
        while (i <= n) {
            result = result * i;
            i = i + 1;
        }
        return result;
    }
}
